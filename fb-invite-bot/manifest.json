{
  "manifest_version": 3,
  "name": "Facebook Auto Inviter",
  "version": "1.1",
  "description": "Automatically clicks Invite buttons with human-like delays.",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icons/icon.png"
  }
}